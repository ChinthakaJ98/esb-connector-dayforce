<proxy xmlns="http://ws.apache.org/ns/synapse" name="postEmployeeContacts" transports="https,http" statistics="disable" trace="disable">
    <target>
        <inSequence>
            <property expression="json-eval($.username)" name="username"/>
            <property expression="json-eval($.password)" name="password"/>
            <property expression="json-eval($.clientNamespace)" name="clientNamespace"/>
            <property expression="json-eval($.apiVersion)" name="apiVersion"/>
            <property expression="json-eval($.xRefCode)" name="xRefCode"/>
            <property expression="json-eval($.fieldAndValue)" name="fieldAndValue"/>
            <property expression="json-eval($.isValidateOnly)" name="isValidateOnly"/>
            <ceridiandayforce.init>
                <username>{$ctx:username}</username>
                <password>{$ctx:password}</password>
                <clientNamespace>{$ctx:clientNamespace}</clientNamespace>
                <apiVersion>{$ctx:apiVersion}</apiVersion>
            </ceridiandayforce.init>
            <log category="INFO" level="full" separator=","/>
            <ceridiandayforce.postEmployeeContacts>
                <isValidateOnly>{$ctx:isValidateOnly}</isValidateOnly>
                <xRefCode>{$ctx:xRefCode}</xRefCode>
                <fieldAndValue>{$ctx:fieldAndValue}</fieldAndValue>
            </ceridiandayforce.postEmployeeContacts>
            <respond/>
        </inSequence>
    </target>
    <description/>
</proxy>
