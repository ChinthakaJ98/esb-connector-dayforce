<proxy xmlns="http://ws.apache.org/ns/synapse" name="postEmployee" transports="https,http" statistics="disable" trace="disable">
    <target>
        <inSequence>
            <property name="ceredianPwd" scope="default" type="STRING" value="DFWSTest"/>
            <property name="isValidateOnly" expression="$url:isValidateOnly"/>
            <property expression="json-eval($.fieldAndValue)" name="fieldAndValue"/>
            <ceridiandayforce.init>
                <username>DFWSTest</username>
                <password>{$ctx:ceredianPwd}</password>
                <clientNamespace>usconfigr58.dayforcehcm.com/Api/ddn</clientNamespace>
                <apiVersion>V1</apiVersion>
            </ceridiandayforce.init>
            <log category="INFO" level="full" separator=","/>
            <ceridiandayforce.postEmployee>
                <isValidateOnly>{$ctx:isValidateOnly}</isValidateOnly>
                <fieldAndValue>{$ctx:fieldAndValue}</fieldAndValue>
            </ceridiandayforce.postEmployee>
            <respond/>
        </inSequence>
    </target>
    <description/>
</proxy>
